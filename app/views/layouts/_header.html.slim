header.header.fixed.clearfix
  .container
    .row
      .col-md-3
        .header-left.clearfix
          .logo
            = link_to image_tag("logo.png", alt: "財團法人民間司法改革基金會", id: 'logo'), root_path
          .site-slogan 建立值得人民信賴的司法
      .col-md-9
        .header-right.clearfix
          .main-navigation.animated
            nav.navbar.navbar-default role="navigation"
              .container-fluid
                .navbar-header
                  button.navbar-toggle type="button" data-toggle="collapse" data-target="#navbar-collapse-1"
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                .collapse.navbar-collapse#navbar-collapse-1
                  ul.nav.navbar-nav.navbar-right
                    - @catalogs.each do |catalog|
                      li.dropdown.mega-menu
                        = link_to catalog.name, catalog_path(catalog), class: "dropdown-toggle", data: { toggle: "dropdown"}
                        ul.dropdown-menu
                          li
                            .row
                              .col-lg-4.col-md-3.hidden-sm
                                = image_tag(catalog.image.try(:url))
                              .col-lg-8.col-md-12
                                .row
                                  - catalog.categories.each do |category|
                                    - if catalog.categories.length == 2
                                      .col-sm-6
                                        h4 = category.name
                                        .divider
                                        ul.menu
                                          - category.keywords.each do |keyword|
                                            li
                                              = link_to keyword_path(keyword) do
                                                i.icon-right-open
                                                = keyword.name
                                          - category.kinds.each do |kind|
                                            li
                                              = link_to kind_path(kind) do
                                                i.icon-right-open
                                                = kind.name
                                    - elsif catalog.categories.length == 3
                                      .col-sm-4
                                        h4 = category.name
                                        .divider
                                        ul.menu
                                          - category.keywords.each do |keyword|
                                            li
                                              = link_to keyword_path(keyword) do
                                                i.icon-right-open
                                                = keyword.name
                                          - category.kinds.each do |kind|
                                            li
                                              = link_to kind_path(kind) do
                                                i.icon-right-open
                                                = kind.name
                                    - elsif catalog.categories.length == 4
                                      .col-sm-3
                                        h4 = category.name
                                        .divider
                                        ul.menu
                                          - category.keywords.each do |keyword|
                                            li
                                              = link_to keyword_path(keyword) do
                                                i.icon-right-open
                                                = keyword.name
                                          - category.kinds.each do |kind|
                                            li
                                              = link_to kind_path(kind) do
                                                i.icon-right-open
                                                = kind.name

